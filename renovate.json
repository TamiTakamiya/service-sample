{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "customManagers": [
      {
        "customType": "regex",
        "datasourceTemplate": "docker",
        "fileMatch": [".tekton/*.yaml"],
        "matchStrings": [
          "BASE_IMAGE=(?<depName>[^:]+?):(?<currentValue>[\\d\\.]+)"
        ],
        "versioningTemplate": "semver"
      }
    ],
    "automerge": true
  }